<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:id="@+id/scroller"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/crop1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:elevation="1dp"
        app:cardCornerRadius="8dp"
        android:background="@drawable/roundedback"
        android:layout_height="110dp">

        <ImageView
            android:id="@+id/imagecrop1"
            android:layout_width="120dp"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:layout_gravity="start"
            android:src="@drawable/index"
            android:layout_height="98dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginStart="130dp"
            android:layout_marginLeft="130dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/croptomato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tomato"
                android:textStyle="bold"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tomatoContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/tomatodescription"
                android:textSize="12sp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/crop2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        app:cardElevation="1dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="5dp"
        android:background="@drawable/roundedback"
        android:layout_height="110dp">
        <ImageView
            android:id="@+id/imagecrop2"
            android:layout_width="120dp"
            android:layout_margin="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/cabbage"
            android:layout_height="98dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="130dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
        <TextView
        android:id="@+id/Cabbage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cabbage"
            android:textStyle="bold"
            android:textSize="15sp"/>
            <TextView
                android:id="@+id/cabbageContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/tomatodescription"
                android:textSize="12sp"/>
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/crop3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:elevation="1dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="10dp"
        android:background="@drawable/roundedback"
        android:layout_height="110dp">
        <ImageView
            android:id="@+id/imagecrop3"
            android:layout_width="120dp"
            android:layout_margin="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/onions"
            android:layout_height="98dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="130dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
        <TextView
        android:id="@+id/cropOnion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/onion"
        android:textSize="15sp"/>
            <TextView
                android:id="@+id/onionContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/tomatodescription"
                android:padding="2dp"
                android:textSize="12sp"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/crop4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:elevation="1dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="10dp"
        android:background="@drawable/roundedback"
        android:layout_height="110dp">
        <ImageView
            android:id="@+id/imagecrop4"
            android:layout_width="120dp"
            android:layout_margin="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/kales"
            android:layout_height="98dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="130dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
        <TextView
            android:id="@+id/cropsukuma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sukuma"
            android:textStyle="bold"
            android:textSize="15sp"/>
            <TextView
                android:id="@+id/sukumaContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/tomatodescription"
                android:padding="2dp"
                android:textSize="12sp"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/crop5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:elevation="1dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="10dp"
        android:background="@drawable/roundedback"
        android:layout_height="110dp">
        <ImageView
            android:id="@+id/imagecrop5"
            android:layout_width="120dp"
            android:layout_margin="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/carrots"
            android:layout_height="98dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="130dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
        <TextView
            android:id="@+id/Carrots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/carrots"
            android:textStyle="bold"
            android:textSize="15sp"/>
            <TextView
                android:id="@+id/CarrotContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/tomatodescription"
                android:padding="2dp"
                android:textSize="12sp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/crop6"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:elevation="1dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="10dp"
            android:background="@drawable/roundedback"
            android:layout_height="110dp">
            <ImageView
                android:id="@+id/imagecrop6"
                android:layout_width="120dp"
                android:layout_margin="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/spinach"
                android:layout_height="98dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="130dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_marginLeft="130dp">
            <TextView
                android:id="@+id/cropSpinach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/spinach"
                android:textStyle="bold"
                android:textSize="15sp"/>
                <TextView
                    android:id="@+id/SpinachContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/tomatodescription"
                    android:padding="2dp"
                    android:textSize="12sp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>